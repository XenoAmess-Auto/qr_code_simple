<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 搜索栏 -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search history..."
        app:iconifiedByDefault="false" />

    <!-- 过滤器 Tab -->
    <LinearLayout
        android:id="@+id/filterTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnFilterAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all" />

        <Button
            android:id="@+id/btnFilterScanned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanned" />

        <Button
            android:id="@+id/btnFilterGenerated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generated" />

        <Button
            android:id="@+id/btnFilterFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite" />

    </LinearLayout>

    <!-- 类型筛选 Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/chipGroupType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:selectionRequired="false" />

    </HorizontalScrollView>

    <!-- 历史记录列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 空视图 -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_history"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- 清除全部按钮 -->
    <Button
        android:id="@+id/btnClearAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/clear_all"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout>
