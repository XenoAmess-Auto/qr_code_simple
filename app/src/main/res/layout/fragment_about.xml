<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Icon -->
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Version -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp" />

        <!-- Language Selector -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/language"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Privacy Settings -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/privacy_settings"
            app:icon="@drawable/ic_security"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Buy me a coffee button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/buy_me_a_coffee"
            app:icon="@drawable/ic_coffee" />

        <!-- Project - Single line button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGitHubProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/sources"
            app:icon="@drawable/ic_github"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Maintainer - Single line button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGitHubMaintainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/maintainer"
            app:icon="@drawable/ic_github"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- License -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</ScrollView>
