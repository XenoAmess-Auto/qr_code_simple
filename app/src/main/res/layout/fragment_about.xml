<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Icon -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            android:layout_marginBottom="16dp" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.0"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="24dp" />

        <!-- Buy me a coffee button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Buy me a coffee"
            app:icon="@drawable/ic_coffee" />

        <!-- Project - Single line button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGitHubProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Sources"
            app:icon="@drawable/ic_github"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Maintainer - Single line button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGitHubMaintainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Maintainer: XenoAmess"
            app:icon="@drawable/ic_github"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- License -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apache License 2.0"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</ScrollView>
