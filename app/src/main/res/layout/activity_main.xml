<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tabButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnTabRealtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_realtime"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnTabImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_image"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnTabGenerate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_generate"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnTabHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_history"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnTabAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_about"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
