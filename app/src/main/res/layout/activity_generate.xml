<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 条码格式选择器 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barcode Format"
        android:textSize="14sp"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinnerFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- 内容输入 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="15"
            android:gravity="top"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <!-- 样式控制面板 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Style"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="12dp" />

            <!-- 颜色方案 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Scheme"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnColorClassic"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@android:color/black"
                    android:text="" />

                <Button
                    android:id="@+id/btnColorBlue"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#1976D2"
                    android:text="" />

                <Button
                    android:id="@+id/btnColorGreen"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#388E3C"
                    android:text="" />

                <Button
                    android:id="@+id/btnColorRed"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#D32F2F"
                    android:text="" />

                <Button
                    android:id="@+id/btnColorPurple"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#7B1FA2"
                    android:text="" />

                <Button
                    android:id="@+id/btnColorOrange"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#F57C00"
                    android:text="" />

                <Button
                    android:id="@+id/btnColorCyan"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#00BCD4"
                    android:text="" />

                <Button
                    android:id="@+id/btnColorDark"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#212121"
                    android:text="" />

            </GridLayout>

            <!-- 圆角滑块 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corner Radius"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/seekBarCornerRadius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0" />

                <TextView
                    android:id="@+id/tvCornerRadiusValue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 点阵大小滑块 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dot Scale"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/seekBarDotScale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="100" />

                <TextView
                    android:id="@+id/tvDotScaleValue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Logo 控制 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnAddLogo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Logo"
                    android:layout_marginEnd="4dp"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/btnRemoveLogo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove"
                    android:layout_marginStart="4dp"
                    style="?android:attr/borderlessButtonStyle" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivLogoPreview"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:contentDescription="Logo preview" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/generate"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/clear"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

    <!-- 预览图 -->
    <ImageView
        android:id="@+id/ivQRCode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/qr_code_image" />

    <!-- 保存和分享按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
